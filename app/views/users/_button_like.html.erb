<div class="media" style="margin-right:5px;" id="picture-<%=@pic.id %>">
  <div class="media-left">
    <% if @pic.liking_users.include?(current_user)%>
      
      <%= form_for current_user.likes.find_by(picture_id: @pic.id), remote: true, method: :delete do |f| %>
        <%= button_tag(type: 'submit', class: "btn btn_remove") do %>
          <span class="glyphicon glyphicon-minus" aria-hidden="true"></span>
        <% end %>
      <% end %>
      
    <% else %>
      <%= form_for current_user.likes.build , remote: true do |f| %>
        <div><%= hidden_field_tag :picture_id, @pic.id %></div>
        <%= button_tag(type: 'submit', class: "btn btn-primary btn_remove") do %>
          <span class="glyphicon glyphicon-plus heart" aria-hidden="true"></span>
        <% end %>
      <% end %>
    <% end %>
  </div>
  <div class="media-body">
    <h4 style="text-align:left;margin-top:7px;"> <%= @pic.likes.count %> </h4>
  </div>
</div>