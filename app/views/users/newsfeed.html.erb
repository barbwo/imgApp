<div class="panel panel-default">
  <div class="panel-heading">
    <h4>Najnowsze zdjęcia obserwowanych użytkowników</h4>
  </div>
  <div class="panel-body">
    <% if @last_items.count == 0 %>
      <p class="center"> Aktualnie brak zdjęć do wyświetlenia. </p>
    <% else %>
      <% @last_items.each do |i| %>
        <div class="row">
          <div class="col-md-4">
            <% u = User.find(i.user_id) %>
            <div class="media">
              <div class="media-right">
                <a href="<%= user_path u %>" title="<%= i.title %>" alt="img">
                  <%= gravatar_for_logo u %>
                </a>
              </div>
              <div class="media-body">
                <h4 style="text-align:left;"><%= u.nick %></h4>
                <p><i> <%= time_ago_in_words(i.created_at) %> temu</i></p>
              </div>
            </div>
          </div>
          <div class="col-md-6 col-offset-2">    
            <div class="thumbnail thumbnail_gallery">
              <%= image_tag i.image.url(:original), class: 'thumbnail original' %>
              <div class="caption">
                <div class="media">
                  <div class="media-left">
                    <% @pic = i %>
                   <%= render 'button_like' %>
                  </div>
                  <div class="media-body">
                    <p style="text-align:left;font-size:14px;"><%= i.title %></p>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
        <hr/>
      <% end %>
    <% end %>
  </div>
</div>
